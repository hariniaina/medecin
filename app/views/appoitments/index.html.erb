<p id="notice"><%= notice %></p>

<h1>Appoitments</h1>

<table>
  <thead>
    <tr>
      <th>Motif</th>
      <th>Date</th>
      <th>Duree</th>
      <th>Doctor</th>
      <th>Patient</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appoitments.each do |appoitment| %>
      <tr>
        <td><%= appoitment.motif %></td>
        <td><%= appoitment.date %></td>
        <td><%= appoitment.duree %> min </td> 
        <td><%= appoitment.doctor_id %></td>
        <td><%= appoitment.patient_id %></td>
        <td><%= link_to 'Show', appoitment %></td>
        <td><%= link_to 'Edit', edit_appoitment_path(appoitment) %></td>
        <td><%= link_to 'Destroy', appoitment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end -%>
  </tbody>
</table>

<br>

