<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="login-wrap">
  <div class="login-html">
    <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab"><font face="chilanka">Connexion</font></label>
    <input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab"><font face="chilanka">Inscription</font></label>
    <div class="login-form">
      <div class="sign-in-htm">
        <div class="group">
          <label for="user" class="label">Email</label>

          <!-- <input id="user" type="text" class="input"> -->
         <%= f.email_field :email, autofocus: true, autocomplete: "email", id: "user", type: "text", class: "input" %>

        </div>
        <div class="group">
          <label for="pass" class="label">Mot de passe</label>
<!--           <input id="pass" type="password" class="input" data-type="password">
 -->          <%= f.password_field :password, autocomplete: "current-password", id: "pass", type: "password", class: "input", data_type: "password" %>
        </div>

        <% if devise_mapping.rememberable? -%>
        <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :me_reconnaître %>
        </div>
        <% end -%>

        <div class="group">

          <%= f.submit "Connexion", type: "submit", class: "button" %>
        </div>
        <div class="hr"></div>
        <div class="foot-lnk">
          <a href="#forgot">Mot de passe oublié?</a>
        </div>
      </div>
      <% end %>



    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="sign-up-htm">
        <div class="group">
          <label for="pass" class="label">Email </label>

          <%= f.email_field :email, autofocus: true, autocomplete: "email", id: "pass", type: "text", class: "input" %>
        </div>

        <div class="group">
          <label for="pass" class="label">Mot de passe</label>

           <%= f.password_field :password, autocomplete: "new-password", type: "password", class: "input", data_type: "password" %>
        </div>
        <div class="group">
          <label for="pass" class="label">Confirmer mot de passe</label>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", id: "pass", type: "password", class: "input", data_type: "password" %>
        </div>

        <div class="group">
             <%= f.submit "Inscription", type: "submit", class: "button" %>

        </div>
        <div class="hr"></div>
        <div class="foot-lnk">
          <label for="tab-1">Already Member?
        </div>


          <% end %>
         <%= render "devise/shared/links" %>


      </div>
    </div>
  </div>
</div>
