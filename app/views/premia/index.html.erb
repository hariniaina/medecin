<p id="notice"><%= notice %></p>

<h1>Premia</h1>

<table>
  <thead>
    <tr>
      <th>Region</th>
      <th>Num</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @premia.each do |premium| %>
      <tr>
        <td><%= premium.region %></td>
        <td><%= premium.num %></td>
        <td><%= premium.date %></td>
        <td><%= link_to 'Show', premium %></td>
        <td><%= link_to 'Edit', edit_premium_path(premium) %></td>
        <td><%= link_to 'Destroy', premium, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Premium', new_premium_path %>
